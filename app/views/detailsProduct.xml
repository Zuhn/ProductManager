<Alloy>
	<Window id='win' class="container">
		<ScrollView class='container' layout='vertical' backgroundColor='transparent'>
			<View backgroundColor='#000' height='40dp' bottom='0dp'>
				<Label text='Modifier un produit' color='#FFF'/>
				<Button image='bt_close.png' width='20dp' height='20dp' right='5dp' color='#FFF' onClick='closePage' tintColor='#FFF'/>
			</View>
			<View height='Ti.UI.SIZE' top='0dp'>
				<ImageView id='thumb' left='0dp' right='0dp' top='0dp' backgroundColor='#FFF' onClick='openGallery' defaultImage='logo.png'/>
				<ActivityIndicator id='ind' top='0dp' left='0dp' right='0dp' height='100' style = 'Ti.UI.iPhone.ActivityIndicatorStyle.DARK' backgroundColor='transparent'>
			</View>
			<View class='v_form'>
				<Label text='Référence : '>
				<TextField id='ref' class='form_modif' hintText='Entrer la référence'>
			</View>
			<View class='v_form'>
				<Label text='Nom : '>
				<TextField id='nom' class='form_modif' hintText='Entrer le nom'>
			</View>
			<View class='v_form'>
				<Label text='Prix : '>
				<TextField id='prix' class='form_modif' hintText='Entrer le prix'>
			</View>
			
			
			<TextArea id='description' class='form_modif'  height='Ti.UI.SIZE' suppressReturn='false' top='0dp' left='10dp'>
			<Button id='bt_cat' class='form_button' title='Choisir la catégorie' top='20dp' color='#000' onClick='openCategory' bottom='10dp'/>
			<Button class='form_button' title='Modifier' top='10dp' color='#000' onClick='addProduct' bottom='10dp'/>
			<Button class='form_button' title='Supprimer' top='10dp' color='#000' onClick='deleteProduct' bottom='10dp'/>
		</ScrollView>

	</Window>
</Alloy>